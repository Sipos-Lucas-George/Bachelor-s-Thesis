datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            String         @id @default(cuid())
    name          String?
    email         String         @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    UserSettings  UserSettings[]
}

model Account {
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([provider, providerAccountId])
}

model UserSettings {
    id                    String @id @default(cuid())
    userId                String @unique
    income                Int
    level                 Int
    individualOrHouseHold Int
    essentials            Int
    debt                  Int
    discretionary         Int
    savings               Int
    currency              String

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
